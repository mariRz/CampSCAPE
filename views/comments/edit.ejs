<%-include("../partials/header") -%>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 20px auto;">
            <h3 style="text-align: center;">Edit Comment</h3>
            <form action="/campgrounds/<%=campground._id%>/comments/<%-comment._id-%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[content]" value="<%-comment.content-%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-md" type="submit">Update Comment</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%-include("../partials/footer") -%>